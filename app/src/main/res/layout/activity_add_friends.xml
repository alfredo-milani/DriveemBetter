<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.CardView
        android:id="@+id/firstFriendCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_avg"
        app:cardBackgroundColor="@color/colorPrimaryExtraDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/first_user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_avg"
                android:text="@string/empty_friends"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/amber_A700" />

            <TextView
                android:id="@+id/first_phone_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_user_name_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_avg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/first_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@id/first_phone_number_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_avg"
                android:background="@mipmap/ic_button_edit_user" />

            <ImageButton
                android:id="@+id/delete_first_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/first_button"
                android:layout_margin="@dimen/margin_avg"
                android:layout_toEndOf="@+id/first_button"
                android:background="@null"
                android:tint="@color/amber_700"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_bin" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/secondFriendCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstFriendCard"
        android:layout_margin="@dimen/margin_avg"
        app:cardBackgroundColor="@color/colorPrimaryExtraDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/second_user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_avg"
                android:text="@string/empty_friends"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/amber_A700" />

            <TextView
                android:id="@+id/second_phone_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_user_name_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_avg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/second_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@id/second_phone_number_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_avg"
                android:background="@mipmap/ic_button_edit_user" />

            <ImageButton
                android:id="@+id/delete_second_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/second_button"
                android:layout_margin="@dimen/margin_avg"
                android:layout_toEndOf="@+id/second_button"
                android:background="@null"
                android:tint="@color/amber_700"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_bin" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>