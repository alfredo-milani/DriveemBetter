<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:civ_border_color="@color/colorSchemas"
        app:civ_border_width="1dp" />

    <ImageView
        android:id="@+id/availability"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/user_picture"
        android:layout_marginStart="-20dp"
        android:layout_toEndOf="@+id/user_picture"
        android:contentDescription="@string/availability"
        app:srcCompat="@drawable/unavailable_shape" />

    <ImageButton
        android:id="@+id/startChatButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/layout_info"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:contentDescription="@string/communicate"
        android:tint="@color/colorSchemas"
        app:srcCompat="@mipmap/ic_chat" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_picture"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/user_item"
                android:textColor="@color/colorSchemasComplementary" />

            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorSchemas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/colorSchemas"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/points_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/point_item"
                android:textColor="@color/colorSchemasComplementary" />

            <TextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorSchemas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/colorSchemas"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/driverFeedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/feedback"
                android:textColor="@color/colorSchemasComplementary" />

            <TextView
                android:id="@+id/driverFeedbackContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/not_determinated"
                android:textColor="@color/colorSchemas" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardSecondScaleGraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/layout_info"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/vpPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/titleGraph">

                <com.itsronald.widget.ViewPagerIndicator
                    android:id="@+id/view_pager_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:gravity="center_vertical"
                    app:dotPadding="20dp"
                    app:selectedDotColor="@color/colorSchemas"
                    app:unselectedDotColor="@color/colorSchemasComplementary" />

            </android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/titleGraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/subTitleGraph"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:textColor="@color/colorText"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subTitleGraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:maxLines="3"
                android:textColor="@color/grey_700"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/refreshGraph"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/titleGraph"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/fullscreenImageButton"
                android:background="@null"
                android:tint="@color/colorSchemas"
                app:srcCompat="@mipmap/refresh_icon"
                android:contentDescription="@string/menu_refresh" />

            <ImageButton
                android:id="@+id/fullscreenImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/titleGraph"
                android:background="@null"
                android:src="@mipmap/ic_fullscreen"
                android:tint="@color/colorSchemas"
                android:contentDescription="@string/appbar_scrolling_view_behavior" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/unavailable_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/data_unavailable"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>