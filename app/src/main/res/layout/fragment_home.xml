<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.driveembetter.proevolutionsoftware.driveembetter.boundary.fragment.HomeFragment" >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:alpha="0.5"
        android:id="@+id/speed_limit"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="@dimen/padding_avg"
        android:background="@drawable/speed_limit_shape"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:id="@+id/weather_icon"
        android:layout_margin="@dimen/padding_avg"
        android:src="@mipmap/ic_weather_unknown"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/speed_limit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/speed_limit"
        android:layout_alignTop="@+id/speed_limit"
        android:layout_alignEnd="@+id/speed_limit"
        android:layout_alignBottom="@+id/speed_limit"
        android:layout_margin="1dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="@string/NA"
        android:textColor="#FFFFFF" />

    <com.driveembetter.proevolutionsoftware.driveembetter.utils.Speedometer
        android:id="@+id/Speedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        custom:currentSpeed="0"
        custom:maxSpeed="300" />


</RelativeLayout>
</FrameLayout>