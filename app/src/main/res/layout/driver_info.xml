<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6397D0"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driverUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Username"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/driverUsernameContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <android.support.v4.widget.Space
                android:id="@+id/space3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/driverPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Location"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/driverPositionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:maxLines = "100"
                android:scrollbars = "horizontal"/>

            <android.support.v4.widget.Space
                android:id="@+id/space4"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


            <TextView
                android:id="@+id/driverFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Feedback"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/driverFeedbackContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>