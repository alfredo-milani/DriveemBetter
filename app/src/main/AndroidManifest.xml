<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.driveembetter.proevolutionsoftware.driveembetter">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".boundary.SignInActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".boundary.SignUpActivity"
            android:label="@string/sign_up"
            android:theme="@style/AppTheme.NoActionBar">
            <!--Default Intent Filter-->
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".boundary.MainFragmentActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <!--Default Intent Filter-->
         <!--   <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter> -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".boundary.RankingFragment"
            android:theme="@style/AppTheme">
            <!--Default Intent Filter-->
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>


        <activity android:name=".boundary.ChartActivity"
            android:theme="@style/AppTheme"
            android:label="@string/strGraph"
            android:parentActivityName=".boundary.MainFragmentActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".boundary.MainFragmentActivity" />
        </activity>

    </application>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>



</manifest>